<?xml version="1.0"?>


<robot name="elea_diff_robot">
  <!-- Main body -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 -0.35" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///workspaces/elea_ws/install/elea_amr/share/elea_amr/meshes/KMP200.dae" scale="1 1 1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="1.08 0.63 0.7"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="8.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <link name= "base_link_rotado">
  </link> 
  <!-- Left differential wheel -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>1.0</kd>
  </gazebo>

  <!-- Right differential wheel -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>1.0</kd>
  </gazebo>

  <!-- Front support wheel (caster) -->
  <link name="front_support_wheel">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>
  </link>

  <!-- Rear support wheel (caster) -->
  <link name="rear_support_wheel">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>
  </link>

  <!-- APF Control Points - Four Corners -->
  <!-- Front left corner control point -->
  <link name="apf_front_left_corner">
    <!-- No visual geometry to avoid LIDAR detection -->
  </link>

  <!-- Front right corner control point -->
  <link name="apf_front_right_corner">
    <!-- No visual geometry to avoid LIDAR detection -->
  </link>

  <!-- Rear left corner control point -->
  <link name="apf_rear_left_corner">
    <!-- No visual geometry to avoid LIDAR detection -->
  </link>

  <!-- Rear right corner control point -->
  <link name="apf_rear_right_corner">
    <!-- No visual geometry to avoid LIDAR detection -->
  </link>

  <!-- LIDAR sensor -->
  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.03"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="joint_base_link_rotada" type="fixed">
    <parent link="base_link"/>
    <child link="base_link_rotado"/>
    <origin xyz="0 0 0" rpy="0 0 3.1416"/>
  </joint>

  <!-- Joints -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link_rotado"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.315 -0.35" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link_rotado"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.315 -0.35" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <joint name="front_support_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_support_wheel"/>
    <origin xyz="0.54 0 -0.38" rpy="0 0 0"/>
  </joint>
  <joint name="rear_support_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_support_wheel"/>
    <origin xyz="-0.54 0 -0.38" rpy="0 0 0"/>
  </joint>


  <!-- APF Control Point Joints - Four Corners -->
  <joint name="apf_front_left_corner_joint" type="fixed">
    <parent link="base_link"/>
    <child link="apf_front_left_corner"/>
    <origin xyz="0.54 0.315 0.35" rpy="0 0 0"/>
  </joint>

  <joint name="apf_front_right_corner_joint" type="fixed">
    <parent link="base_link"/>
    <child link="apf_front_right_corner"/>
    <origin xyz="0.54 -0.315 0.35" rpy="0 0 0"/>
  </joint>

  <joint name="apf_rear_left_corner_joint" type="fixed">
    <parent link="base_link"/>
    <child link="apf_rear_left_corner"/>
    <origin xyz="-0.54 0.315 0.35" rpy="0 0 0"/>
  </joint>

  <joint name="apf_rear_right_corner_joint" type="fixed">
    <parent link="base_link"/>
    <child link="apf_rear_right_corner"/>
    <origin xyz="-0.54 -0.315 0.35" rpy="0 0 0"/>
  </joint>

  <!-- LIDAR Joint -->
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.35" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo Differential Drive Plugin -->
  <gazebo>
    <plugin filename="libignition-gazebo-diff-drive-system.so" name="ignition::gazebo::systems::DiffDrive">
      <left_joint>right_wheel_joint</left_joint>
      <right_joint>left_wheel_joint</right_joint>
      <wheel_separation>0.63</wheel_separation>
      <wheel_radius>0.06</wheel_radius>
      <odom_publish_frequency>50</odom_publish_frequency>
      <topic>cmd_vel</topic>
      <odom_topic>odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>
  </gazebo>

  <!-- Gazebo LIDAR Plugin -->
  <gazebo reference="lidar_link">
      <sensor name="lidar" type="gpu_lidar">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <update_rate>10</update_rate>
        <always_on>1</always_on>
        <lidar>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>30.0</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </lidar>
        <plugin filename="libgz-sim-sensors-system.so" name="gz::sim::systems::Sensors">
          <topic>lidar/scan</topic>
        </plugin>
      </sensor>
  </gazebo>

  
</robot>
