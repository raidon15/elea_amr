<?xml version="1.0"?>


<robot name="elea_diff_robot">
  <!-- Main body -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="1.849 1.445 0.51025"/>
      </geometry>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="1.849 1.445 0.51025"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="8.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Left differential wheel -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>1.0</kd>
  </gazebo>

  <!-- Right differential wheel -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>1.0</kd>
  </gazebo>

  <!-- Front support wheel (caster) -->
  <link name="front_support_wheel">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>
  </link>

  <!-- Rear support wheel (caster) -->
  <link name="rear_support_wheel">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>
  </link>

  <!-- APF Control Points -->
  <!-- Front center control point -->
  <link name="apf_front_center">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 0.5"/>
      </material>
    </visual>
  </link>

  <!-- Front left control point -->
  <link name="apf_front_left">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 0.5"/>
      </material>
    </visual>
  </link>

  <!-- Front right control point -->
  <link name="apf_front_right">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 0.5"/>
      </material>
    </visual>
  </link>

  <!-- Rear center control point -->
  <link name="apf_rear_center">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 0.5"/>
      </material>
    </visual>
  </link>

  <!-- Left side control point -->
  <link name="apf_left_side">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 0.5"/>
      </material>
    </visual>
  </link>

  <!-- Right side control point -->
  <link name="apf_right_side">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 0.5"/>
      </material>
    </visual>
  </link>

  <!-- LIDAR sensor -->
  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.03"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Joints -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.7425 -0.255125" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.7425 -0.255125" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <joint name="front_support_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_support_wheel"/>
    <origin xyz="0.9245 0 -0.285125" rpy="0 0 0"/>
  </joint>
  <joint name="rear_support_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_support_wheel"/>
    <origin xyz="-0.9245 0 -0.285125" rpy="0 0 0"/>
  </joint>


  <!-- APF Control Point Joints -->
  <joint name="apf_front_center_joint" type="fixed">
    <parent link="base_link"/>
    <child link="apf_front_center"/>
    <origin xyz="0.9245 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="apf_front_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="apf_front_left"/>
    <origin xyz="0.8 0.6 0" rpy="0 0 0"/>
  </joint>

  <joint name="apf_front_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="apf_front_right"/>
    <origin xyz="0.8 -0.6 0" rpy="0 0 0"/>
  </joint>

  <joint name="apf_rear_center_joint" type="fixed">
    <parent link="base_link"/>
    <child link="apf_rear_center"/>
    <origin xyz="-0.9245 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="apf_left_side_joint" type="fixed">
    <parent link="base_link"/>
    <child link="apf_left_side"/>
    <origin xyz="0 0.7225 0" rpy="0 0 0"/>
  </joint>

  <joint name="apf_right_side_joint" type="fixed">
    <parent link="base_link"/>
    <child link="apf_right_side"/>
    <origin xyz="0 -0.7225 0" rpy="0 0 0"/>
  </joint>

  <!-- LIDAR Joint -->
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.255125" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo Differential Drive Plugin -->
  <gazebo>
    <plugin filename="libignition-gazebo-diff-drive-system.so" name="ignition::gazebo::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>1.485</wheel_separation>
      <wheel_radius>0.06</wheel_radius>
      <odom_publish_frequency>50</odom_publish_frequency>
      <topic>cmd_vel</topic>
    </plugin>
  </gazebo>

  <!-- Gazebo LIDAR Plugin -->
  <gazebo reference="lidar_link">
      <sensor name="lidar" type="gpu_lidar">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <update_rate>10</update_rate>
        <always_on>1</always_on>
        <lidar>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>30.0</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </lidar>
        <plugin filename="libgz-sim-sensors-system.so" name="gz::sim::systems::Sensors">
          <topic>lidar/scan</topic>
        </plugin>
      </sensor>
  </gazebo>

  
</robot>
